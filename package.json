{
  "name": "football-career-simulator",
  "displayName": "My Football Career Simulator",
  "version": "0.5.7",
  "description": "Simulate your entire football career from youth academy to retirement with realistic stats, transfers, and progression",
  "author": "Zpower",
  "license": "MIT",
  "private": true,
  "type": "module",
  "keywords": [
    "football",
    "soccer",
    "career",
    "simulator",
    "sports",
    "game",
    "manager",
    "player"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "android:sync": "npx cap sync android",
    "android:build": "npm run build && npx cap sync android && cd android && ./gradlew assembleRelease",
    "android:bundle": "npm run build && npx cap sync android && cd android && .\\gradlew.bat bundleRelease",
    "android:open": "npx cap open android",
    "locale:validate": "node scripts/locale-validator.cjs validate",
    "locale:backup": "node scripts/locale-validator.cjs backup",
    "locale:restore": "node scripts/locale-validator.cjs restore"
  },
  "dependencies": {
    "@capacitor-community/stripe": "^7.2.2",
